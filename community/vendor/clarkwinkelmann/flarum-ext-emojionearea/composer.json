{
    "name": "clarkwinkelmann/flarum-ext-emojionearea",
    "description": "Add EmojiOne Area emoji picker to Flarum",
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Clark Winkelmann",
            "email": "clark.winkelmann@gmail.com",
            "homepage": "https://clarkwinkelmann.com/"
        }
    ],
    "support": {
        "issues": "https://github.com/clarkwinkelmann/flarum-ext-emojionearea/issues",
        "source": "https://github.com/clarkwinkelmann/flarum-ext-emojionearea"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.6"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\EmojiOneArea\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Emoji Picker",
            "icon": {
                "name": "caret-square-o-up",
                "backgroundColor": "#f39c12",
                "color": "#ffffff"
            }
        }
    }
}
